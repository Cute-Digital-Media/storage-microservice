{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": ".",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger/plugin"
    ],
    "webpack": true,
    "tsConfigPath": "./tsconfig.build.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "file-gateway": {
      "type": "application",
      "root": "apps/file-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/file-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/file-gateway/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "./"
}